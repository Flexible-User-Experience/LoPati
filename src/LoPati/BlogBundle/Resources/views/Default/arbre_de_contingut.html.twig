<dl>
	{% for categoria in categories %}
		<dt style="margin-bottom:-10px"><a style="color:#444" href="/admin/lopati/menu/categoria/{{categoria.id}}/edit">{{ categoria.ordre }}: {{ categoria.nom }}</a></dt>
		<dd>
			<dl>
				{% for subcategoria in categoria.subCategoria %}
					<dt style="margin-bottom:-10px"><a style="color:#666" href="/admin/lopati/menu/subcategoria/{{subcategoria.id}}/edit">{{ categoria.ordre }}.{{ subcategoria.ordre }}: {{ subcategoria.nom }}</a></dt>
					<dd>
						<dl>
							{% for pagina in subcategoria.pagines %}
								<dt>
									{% if (pagina.imageGran1Name) %}
										<img src="{{ vich_uploader_asset(pagina, 'imageGran1') | imagine_filter('thumb_imatge_pagina_arbre_continguts') }}"/>
									{% endif %}
									<a style="color:#888" href="/admin/lopati/blog/pagina/{{pagina.id}}/edit">{{ pagina.titol }}</a></dt>
								<dd></dd>
							{% endfor %}
						</dl>
					</dd>
				{% endfor %}
			</dl>
		</dd>	
	{% endfor %}
</dl>
