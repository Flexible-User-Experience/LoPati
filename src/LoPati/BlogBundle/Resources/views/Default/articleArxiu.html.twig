{% extends '::frontend.html.twig' %}

{% block opengraph %}
    {% if pagina.titol %}<meta content="{{ pagina.titol }}" property="og:title"/>{% endif %}
    {% if pagina.imageGran1Name %}<meta content="{{ vich_uploader_asset(pagina, 'imageGran1') | imagine_filter('imatge_pagina') }}" property="og:image"/>{% endif %}
    {% if pagina.resum %}<meta content="{{ pagina.resum }}" property="og:description"/>{% endif %}
{% endblock %}

{% block title %}: {% endblock %}

{% block menu %}
    {% render controller('MenuBundle:Default:pintaMenuLlista', {categoria_id: pagina.categoria.id, onlycategories: 1, arxiu: 1}) %}
{% endblock %}

{% block contenidor %}
    {% include 'BlogBundle:Default:blog.html.twig' %}
{% endblock %}

{% block menuArxiu %}
    {% render controller('BlogBundle:Default:menuDretaArxiu', {any_current: null, categoria_id: pagina.categoria.id, arxiu: pagina.categoria.slug }) %}
{% endblock %}
