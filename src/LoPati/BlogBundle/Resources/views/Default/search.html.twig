{% extends '::frontend.html.twig' %}
{% block title %}{% endblock %}
{% block menu %}
    {% render "MenuBundle:Default:pintaMenu" with {id: null, llista: 0} %}
{% endblock %}
{% block contenidor %}
    {% if app.session.hasFlash('notice') %}
        <div class="flash success">{{ app.session.flash('notice') }}</div>
    {% endif %}
    <div style="width: 100%; height: 30px; background: none;"></div>
    <div class="contenidor">

      <h3> {{ pagines|length}} {% trans %} resultat_cerca {% endtrans %}: {{ textabuscar }}</h3>
        <ul id="llista_resultats_cerca">
    {% for pagina in pagines %}


        {% if (date(pagina.dataCaducitat) >  date() and pagina.subCategoria is not null) or (pagina.datacaducitat is null and pagina.subCategoria is not null) %}
            <li><a href="{{ path('pagina', {'id': pagina.id,'categoria' : pagina.categoria.slug, 'subcategoria' : pagina.subcategoria.slug,'titol' : pagina.slug }) }}">{{ pagina.titol }}</a></li>
        {% else %}
            {% if pagina.subCategoria is null and pagina.dataCaducitat is null %}
                <li><a href="{{ path('categoriaenenllas', {'id': pagina.id,'categoria' : pagina.categoria.slug }) }}">{{ pagina.titol }}</a></li>
            {% elseif date(pagina.dataCaducitat) <=  date() and pagina.dataCaducitat is not null%}

                <li><a href="{{ path('arxiuarticle', {'id': portada.id,  'any': portada.datapublicacio|date("Y"), 'arxiu': portada.categoria.slug, 'titol': portada.slug }) }}">{{ portada.titol }}</a></li>
            {% endif %}
         {% endif %}
        {% else %}
    {% endfor %}
       </ul>
</div>



{% endblock %}