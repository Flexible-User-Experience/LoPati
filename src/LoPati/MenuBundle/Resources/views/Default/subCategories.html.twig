{% if subcategories is not empty %}
    <div id='menu1' class='subcat'>
        <ul>
            {% for subcategoria in subcategories %}
                {% if subcategoria.link is not none %}
                    {% if ( id == subcategoria.link or id == subcategoria.link.id ) %}
                        {% if subcategoria.llista == 1 %}
                            <li>
                                <span>{% render controller("MenuBundle:Default:creaLink", {idPagina: null, tipus: 3, actiu: 1, titol: subcategoria, llista: 1}) %}</span>
                            </li>
                        {% else %}
                            <li>
                                <span>{% render controller("MenuBundle:Default:creaLink", {idPagina: subcategoria.link.id, tipus: 4, actiu: 1, titol: subcategoria, llista: 0}) %}</span>
                            </li>
                        {% endif %}
                    {% else %}
                        {% if subcategoria.llista == 1 %}
                            <li>
                                <span>{% render controller("MenuBundle:Default:creaLink", {idPagina: null, tipus: 3, actiu: 0, titol: subcategoria, llista: 1}) %}</span>
                            </li>
                        {% else %}
                            <li>
                                <span>{% render controller("MenuBundle:Default:creaLink", {idPagina: subcategoria.link.id, tipus: 4 , actiu: 0, titol: subcategoria, llista: 0}) %}</span>
                            </li>
                        {% endif %}
                    {% endif %}
                {% else %}
                    {% if subcategoria.llista == 1 %}
                        <li>
                            <span>{% render controller("MenuBundle:Default:creaLink", {idPagina: null, tipus: 3, actiu: 0, titol: subcategoria, llista: 1}) %}</span>
                        </li>
                    {% endif %}
                    {% if subcategoria.ordre == 123 %} {# PROJECTE IRRADIADOR #}
                        <li>
                            <span><a href="{{ path( 'irradiador_' ~ app.request.locale ) }}">{{ subcategoria.nom }}</a></span>
                        </li>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endif %}
